---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import PageHero from "@/components/PageHero.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <PageHero 
    page="contact" 
    title="Contacto" 
    description="Estamos aquí para ayudarte con tu salud."
  />
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contacto</Fragment>
      <Fragment slot="desc">Estamos aquí para ayudarte con tu salud.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Hospital San Miguel</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          ¿Necesitas atención médica o tienes preguntas? Estamos aquí para ayudarte. Completa el formulario o contáctanos directamente.
        </p>
        
        <div class="mt-8">
          <h3 class="font-semibold text-lg text-gray-800 mb-4">Información de Contacto</h3>
          <div class="space-y-3">
            <div class="flex items-start space-x-3 text-gray-600">
              <Icon class="text-gray-400 w-5 h-5 mt-0.5" name="uil:map-marker" />
              <div>
                <p class="font-medium">Hospital San Miguel</p>
                <p>Puerto El Carmen, Ecuador</p>
                <p>Coordenadas: 0.1165363, -75.8657967</p>
              </div>
            </div>
            <div class="flex items-center space-x-3 text-gray-600">
              <Icon class="text-gray-400 w-5 h-5" name="uil:envelope" />
              <a href="mailto:contacto@quinacare.org" class="hover:text-blue-600">
                contacto@quinacare.org
              </a>
            </div>
            <div class="flex items-center space-x-3 text-gray-600">
              <Icon class="text-gray-400 w-5 h-5" name="uil:phone" />
              <a href="tel:+593-999-999999" class="hover:text-blue-600">
                +593-999-999999
              </a>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h3 class="font-semibold text-lg text-gray-800 mb-4">Horarios de Atención</h3>
          <div class="space-y-2 text-gray-600">
            <div class="flex justify-between">
              <span>Lunes a Viernes:</span>
              <span>08:00 - 12:00 y 14:00 - 16:00</span>
            </div>
            <div class="flex justify-between">
              <span>Sábado:</span>
              <span>Cerrado</span>
            </div>
            <div class="flex justify-between">
              <span>Domingo:</span>
              <span>08:00 - 12:00</span>
            </div>
            <div class="flex justify-between font-semibold text-red-600">
              <span>Emergencias:</span>
              <span>24/7</span>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h3 class="font-semibold text-lg text-gray-800 mb-4">Ubicación</h3>
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d995.2332111845547!2d-75.8664229!3d0.1164241!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e278500325f573d%3A0x525352c18e9e7f55!2sHospital%20San%20Miguel!5e0!3m2!1ses!2sec!4v1737890000000!5m2!1ses!2sec"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Hospital San Miguel Location"
            ></iframe>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
