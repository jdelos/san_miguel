---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import PageHero from "@/components/PageHero.astro";
---

<Layout title="Contacto">
  <Container>
    <PageHero
      title="Contacto"
      description="Estamos aquí para ayudarte con tu salud"
    />

    <section class="flex flex-col gap-8 mx-auto max-w-5xl mt-16">
      <!-- Contact Cards Section -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <!-- Contact Information Card -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
          <h2 class="font-bold text-2xl md:text-4xl text-gray-800 mb-6">
            Contacto
          </h2>

          <div class="space-y-4">
            <div>
              <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                <span class="text-[#557B68]">📍</span> Dirección
              </h3>
              <p class="text-slate-500 ml-7">Puerto El Carmen, Ecuador</p>
            </div>

            <div>
              <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                <span class="text-[#557B68]">📧</span> Email
              </h3>
              <p class="text-slate-500 ml-7">contacto@quinacare.org</p>
            </div>

            <div>
              <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                <span class="text-[#557B68]">📞</span> Teléfono
              </h3>
              <p class="text-slate-500 ml-7">+593-999-999999</p>
            </div>
          </div>
        </div>

        <!-- Hours Card -->
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
          <h2 class="font-bold text-2xl md:text-4xl text-gray-800 mb-6">
            Horarios de Atención
          </h2>

          <div class="space-y-4">
            <div>
              <h3 class="font-semibold text-gray-800">Consultas Externas</h3>
              <ul class="text-slate-500 space-y-2 mt-2">
                <li class="flex justify-between">
                  <span>Lunes a Viernes:</span>
                  <span>08:00 - 12:00</span>
                </li>
                <li class="flex justify-between">
                  <span></span>
                  <span>14:00 - 16:00</span>
                </li>
                <li class="flex justify-between">
                  <span>Sábado:</span>
                  <span>Cerrado</span>
                </li>
                <li class="flex justify-between">
                  <span>Domingo:</span>
                  <span>08:00 - 12:00</span>
                </li>
              </ul>
            </div>

            <div class="pt-2">
              <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                <span class="text-red-500">🚨</span> Emergencias
              </h3>
              <p class="text-slate-500 ml-7">Atención 24/7</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="w-full min-h-[750px]">
        <h2 class="font-bold text-4xl text-gray-800 mb-6">Nuestra Ubicación</h2>
        <div class="aspect-square h-auto w-full rounded-lg overflow-hidden shadow-md">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d995.2332111845547!2d-75.8664229!3d0.1164241!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e278500325f573d%3A0x525352c18e9e7f55!2sHospital%20San%20Miguel!5e0!3m2!1ses!2sec!4v1737890000000!5m2!1ses!2sec"
            class="w-full h-full"
            style="border:0;"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </section>
  </Container>
</Layout>
