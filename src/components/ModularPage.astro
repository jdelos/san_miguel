---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import PageHero from "@/components/PageHero.astro";

interface Props {
  page: any;
}

const { page } = Astro.props;

if (!page) {
  throw new Error('Page data is undefined');
}

const { data } = page;

// Background color classes
const bgClasses = {
  'white': 'bg-white',
  'gray-light': 'bg-gray-50',
  'brand-green': 'bg-green-600 text-white',
  'brand-red': 'bg-red-600 text-white',
};
---

<Layout title={data.title}>
  <PageHero 
    title={data.heroTitle} 
    description={data.heroDescription}
    backgroundImage={data.heroImage}
  />
  
  <Container>
    <div class="space-y-16 py-16">
      {data.blocks && data.blocks.map((block: any) => (
        <div class={`rounded-lg p-8 ${bgClasses[block.backgroundColor] || 'bg-white'}`}>
          {block.discriminant === 'full-width' && (
            <div class="max-w-4xl mx-auto">
              <h2 class="text-3xl font-bold mb-6">{block.title}</h2>
              <div class="prose max-w-none" set:html={block.content} />
            </div>
          )}
          
          {block.discriminant === 'two-column-cards' && (
            <div class="grid md:grid-cols-2 gap-8">
              <div class="bg-white p-6 rounded-lg shadow-sm">
                <h3 class="text-xl font-semibold mb-4 text-gray-800">{block.leftCard.title}</h3>
                <div class="prose text-gray-600" set:html={block.leftCard.content} />
                {block.leftCard.link && block.leftCard.linkText && (
                  <a href={block.leftCard.link} class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-medium">
                    {block.leftCard.linkText} →
                  </a>
                )}
              </div>
              
              <div class="bg-white p-6 rounded-lg shadow-sm">
                <h3 class="text-xl font-semibold mb-4 text-gray-800">{block.rightCard.title}</h3>
                <div class="prose text-gray-600" set:html={block.rightCard.content} />
                {block.rightCard.link && block.rightCard.linkText && (
                  <a href={block.rightCard.link} class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-medium">
                    {block.rightCard.linkText} →
                  </a>
                )}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </Container>
</Layout>
