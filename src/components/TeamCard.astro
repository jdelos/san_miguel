---
import { Picture } from 'astro:assets';

interface Props {
  name: string;
  role: string;
  department: string;
  image: ImageMetadata;
  imagePosition?: string;
  children?: any;
}

const { name, role, department, image, imagePosition, children } = Astro.props;

// Use the image position directly as a string
const objectPosition = imagePosition || 'center top';
---

<div class="bg-white rounded-lg shadow-sm border overflow-hidden">
  <div class="w-full">
    <Picture
      src={image}
      alt={name}
      widths={[300, 600, 900]}
      sizes="(max-width: 768px) 300px, (max-width: 1200px) 600px, 900px"
      class="w-full h-80 object-cover"
      style={`object-position: ${objectPosition}`}
    />
  </div>
  <div class="p-6">
    <h3 class="font-semibold text-lg text-gray-800 text-center mb-2">
      {name}
    </h3>
    <p class="text-sm text-blue-600 mb-3 text-center">
      {role}
    </p>
    <div class="text-sm text-slate-600 text-center">
      <slot />
    </div>
  </div>
</div>

