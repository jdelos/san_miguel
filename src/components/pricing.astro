---
import { Tick } from "@/components/ui/icons";
import Link from "@/components/ui/link.astro";

const { plan } = Astro.props;
---

<div class="h-full">
  <div class="flex flex-col h-full w-full border-2 border-[#D8DEE9] border-opacity-50 py-6 px-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
    <!-- Header -->
    <div class="text-center mb-6">
      <h4 class="text-xl font-semibold text-gray-800 mb-3">{plan.name}</h4>
      <p class="text-2xl font-bold text-blue-600">
        {
          plan.price && typeof plan.price === "object"
            ? plan.price.monthly
            : plan.price
        }
      </p>
    </div>
    
    <!-- Features -->
    <div class="flex-grow">
      <ul class="space-y-3 text-left">
        {
          plan.features.map((item) => (
            <li class="flex items-start gap-3 text-gray-700">
              <Tick class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" />
              <span class="text-sm leading-relaxed">{item}</span>
            </li>
          ))
        }
      </ul>
    </div>
    
    <!-- Button -->
    <div class="mt-6 pt-4 border-t border-gray-100">
      <Link
        href={plan.button.link || "#"}
        block
        style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>
